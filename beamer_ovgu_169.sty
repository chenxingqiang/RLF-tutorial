% define the theme color (using a blue color for Zhijiang Lab)
\definecolor{ovgu}{rgb}{0.18,0.22,0.62}

\setbeamercolor{titlelike}{fg=white}
\setbeamercolor{title page}{bg=ovgu}
\setbeamertemplate{navigation symbols}{}
