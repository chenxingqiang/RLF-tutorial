\setbeamercolor{section in toc shaded}{fg=ovgu}
\setbeamercolor{section in toc}{fg=ovgu,bg=ovgu}
\setbeamercolor{subsection in toc shaded}{fg=ovgu}
\setbeamercolor{subsection in toc}{fg=ovgu}

\setbeamerfont{title page}{family=\rmfamily}
\setbeamerfont{author}{size=\small}
\setbeamertemplate{title page}
{%
	%\vskip35pt
	%\vskip25pt
	\vskip15pt
	\centering
	\usebeamerfont{title}\inserttitle
	\vspace*{0.5ex}
	\textcolor{white}{\hrule height 2pt}
	\bigskip
	\usebeamerfont{author}\insertauthor\par
	\vspace*{1ex}
	\usebeamerfont{institute}\insertinstitute\par
	\vspace*{1ex}
	\usebeamerfont{date}\insertdate\par
	\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
}

\newenvironment{withoutheadline}{%
	\setbeamercolor{background canvas}{bg=white}
	\setbeamertemplate{headline}{%
		\begin{minipage}[c][0.9cm]{\paperwidth}
			\begin{minipage}{3cm}
				%\centering
				~\includegraphics[height=0.85cm]{logos/zhijianglablogo.pdf}
			\end{minipage}
		\end{minipage}
		\color{ovgu}\rule{\paperwidth}{1pt} 
	}
	% 已移除withoutheadline环境中的页脚
	\setbeamertemplate{footline}{}
}{}

\setbeamertemplate{headline}
{\begin{minipage}[c][0.9cm]{\paperwidth}
		\begin{minipage}{3cm}
			% Left-aligned logo
			~\includegraphics[height=0.85cm]{logos/zhijianglablogo.pdf}
		\end{minipage}\hfill
	\end{minipage}
	\color{ovgu}\rule{\paperwidth}{1pt} 
}

% 已移除页脚
\setbeamertemplate{footline}{}

\AtBeginSection[]
{
	\begin{withoutheadline}
		\miniframesoff
		\begin{frame}
			\begin{center}
				\usebeamercolor[fg]{block title}\LARGE{\insertsection}
			\end{center}
		\end{frame}
		\miniframeson
	\end{withoutheadline}
}

\AtBeginSubsection[]
{
	\begin{withoutheadline}
		\miniframesoff
			\begin{frame}<beamer>
				\frametitle{Intermediate Overview}
				\tableofcontents[sectionstyle=show/hide,subsectionstyle=show/shaded/hide,subsubsectionstyle=show/show/shaded/hide]
			\end{frame}
		\miniframeson
	\end{withoutheadline}
}

